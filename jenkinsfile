pipeline {
    agent { label 'Jenkins-Agent' }

    tools {
        nodejs 'NodeJS16' // Make sure this matches the NodeJS installation in Jenkins
    }

    environment {
        NODE_ENV = 'production' // Optional: set environment variables if needed
    }

    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'master',
                    credentialsId: 'github',
                    url: 'https://github.com/faasilkunju/faasilkunju.git'
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install'
            }
        }

        stage("Run Tests") {
            steps {
                sh 'npm test'
            }
        }

        stage("Build Application") {
            steps {
                // Only run if your package.json has a "build" script
                sh 'npm run build || echo "No build script defined"'
            }
        }

        stage("Start Application") {
            steps {
                sh './scripts/start_server' // Start your Node.js app using your script
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace after build..."
            cleanWs()
        }
        success {
            echo "Build, Test, and Deployment completed successfully!"
        }
        failure {
            echo "Build or Test failed. Check logs!"
        }
    }
}
